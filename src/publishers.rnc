      element sidebar {
         db.sidebar.attlist,
         db._title, 
         db.sidebar.info,
         db.all.blocks+, db.recursive.sections*
      }
db.person =
      element person {
         db.person.attlist,
         db.personname,
         (db.address|db.affiliation|db.email|db.uri|db.personblurb|db.mediaobject)*
      }
      
db.org =
      element org {
         db.org.attlist,
         db.orgname,
         (db.address|db.affiliation|db.email|db.uri|db.orgdiv|db.mediaobject)*
      }

db.parameter = notAllowed

db.info =
element info
{
